def find_largest_number(input_list):
    # Initialize the largest number to the first element
    largest = input_list[0]
    # Loop through the list to find the largest number
    for number in input_list:
        if number > largest:
            largest = number
    return largest

# Get user input and convert it to a list of integers
user_input = input("Enter numbers separated by spaces: ")
input_list = [int(num) for num in user_input.split()]  # Convert input to a list of integers

# Find the largest number using the function
largest_number = find_largest_number(input_list)

# Display the largest number
print("The largest number is:", largest_number)
